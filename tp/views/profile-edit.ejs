<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user) { %>

			<%- include('./partials/headerLogueado') %>

	  
		<% } else { %> 

				<%- include('./partials/header') %>

		<% }  %> 
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
					
				
				<!-- Show the "ultimos" products -->
				<form action="/profile/edit/<%= locals.user.id_usuarios %>" method="POST" novalidate>
					<ul>
						<li><label for="email">Email:</label></li>
						<li class = "formularios"><input type="email" id="email" name="email" 
							value="<%= locals.user.email %>"></li>
							<% if (locals.errors && errors.email) { %>
								<div class="error">
									<p><%= errors.email.msg %></p>
								</div>
							<% } %>
						
						<li><label for="usuario">Usuario:</label></li>
						<li class = "formularios"><input type="text" id="usuario" name="usuario"
							value="<%= locals.user.nombre %>"></li>
							<% if (locals.errors && errors.usuario) { %>
								<div class="error">
									<p><%= errors.usuario.msg %></p>
								</div>
							<% } %>
						
						<li><label for="contraseña">Contraseña:</label></li>
						<li class = "formularios"><input type="password" id="contraseña" name="contraseña"></li>
						<% if (locals.errors && errors.contraseña) { %>
                            <div class="error">
                                <p><%= errors.contraseña.msg %></p>
                            </div>
                        <% } %>


						<li><label for="fecha_nacimiento">Fecha de Nacimiento:</label></li>
						<li class = "formularios"><input type="date" id="fecha_nacimiento" name="fecha_nacimiento"
							value="<%= locals.user.fecha_de_nacimiento %>"></li>
						
						<li><label for="numero_documento">Número de Documento:</label></li>
						<li class = "formularios"><input type="number" id="nro_documento" name="documento"
							value="<%= locals.user.dni %>"></li>
						
						<li><label for="foto_perfil">Foto de Perfil:</label></li>
						<li class = "formularios"><input type="file" id="foto_perfil" name="foto_perfil"
							value="<%= locals.user.foto_de_perfil %>"></li>
						
						<li><input type="submit" value="Editar"></li>
					</ul>
				</form>
			</div>
		</div>
		<!-- /Novedades -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>
</html>
