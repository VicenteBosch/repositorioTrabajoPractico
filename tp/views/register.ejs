<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Registrarse</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<form action="" method="GET">
					<ul>
						<li><label for="email">Email:</label></li>
						<li class = "formularios"><input type="email" id="email" name="email"></li>
						
						<li><label for="usuario">Usuario:</label></li>
						<li class = "formularios"><input type="text" id="usuario" name="usuario"></li>
						
						<li><label for="contraseña">Contraseña:</label></li>
						<li class = "formularios"><input type="password" id="contraseña" name="contraseña"></li>
						
						<li><label for="fecha_nacimiento">Fecha de Nacimiento:</label></li>
						<li class = "formularios"><input type="date" id="fecha_nacimiento" name="nacimiento"></li>
						
						<li><label for="nro_documento">Número de Documento:</label></li>
						<li class = "formularios"><input type="number" id="nro_documento" name="documento"></li>
						
						<li><label for="foto_perfil">Foto de Perfil:</label></li>
						<li class = "formularios"><input type="text" id="foto_perfil" name="foto"></li>
						
						<li><input type="submit" value="Registrarse"></li>
					</ul>
				</form>
			</div>
		</div>
		<!-- /Novedades -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>
</html>
