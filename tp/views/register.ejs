<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Registrarse</h2>
				</div>
				<form action="/profile/register" method="POST" novalidate>
                    <div>
                        <label for="name">Nombre de Usuario</label>
                        <input type="text" id="name" name="name" placeholder="nombre" value="">

						<% if (locals.error && errors.name) { %>
						 
							<p> <%= errors.name.msg %></p>

						<% } %>


                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="email" value="">
						
						<% if (locals.error && errors.email) { %>
						 
							<p> <%= errors.email.msg %></p>

						<% } %>

					
					</div>
				
                    <div>
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" placeholder="contraseña" 
							value= "<%= locals.old !== undefined && old.password ? old.password : "" %> ">

						<% if (locals.error && errors.password) { %>
						 
							<p> <%= errors.password.msg %></p>

						<% } %>

                    </div>
                    
                    <button type="submit">Registrarme</button>
                </form>
			</div>
		</div>
		<!-- /Novedades -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>
</html>
