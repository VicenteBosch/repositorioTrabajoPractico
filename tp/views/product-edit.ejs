<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
        <% if (locals.user) { %>

			<%- include('./partials/headerLogueado') %>

	  
		<% } else { %> 

				<%- include('./partials/header') %>

		<% }  %> 
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Editar mi producto</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<form action="/products/edit/<%= auto.id_producto %>"  method="POST" novalidate>
					<ul>

						<li><label for="fotoNueva"> Foto del producto</label></li>
						<li class = "formularios"><input type="file" id="fotoNuevo" name="fotoNuevo"></li>

                        <% if (locals.errors && errors.password) { %>
                            <div class="error">
                                <p><%= errors.password.msg %></p>
                            </div>
                        <% } %>
						
						<li><label for="nombreNuevo"> Nombre del producto</label></li>
						<li class = "formularios"><input type="text" id="nombreNuevo" name="nombreNuevo"></li>

						<% if (locals.errors && errors.password) { %>
                            <div class="error">
                                <p><%= errors.password.msg %></p>
                            </div>
                        <% } %>

						<li><label for="descripcionNuevo">Descripcion del producto</label></li>
						<li class = "formularios"><input type="text" id="descripcionNuevo" name="descripcionNuevo"></li>
						
                        <% if (locals.errors && errors.password) { %>
                            <div class="error">
                                <p><%= errors.password.msg %></p>
                            </div>
                        <% } %>

                        <button class="bottom" type="submit">Guardar cambios</button>

                        
					</ul>
				</form>
			</div>
		</div>
		<!-- /Novedades -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>
</html>
