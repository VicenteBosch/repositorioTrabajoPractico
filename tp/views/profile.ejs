<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->

		<% if (locals.user) { %>

			<%- include('./partials/headerLogueado') %>

	  
		<% } else { %> 

				<%- include('./partials/header') %>

		<% }  %>


		<!-- /Header -->

		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/users/fotoPerfil1.jpg" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center">
						<h1 class="main-title"> 
							<a href="/profile/edit">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<form action="/profile/edit/ <%= usuario.id_usuarios %>">
							
								<button class="logout" type="submit">
									<a class="btn mt-3 ml-4" href="/profile/edit/ <%= usuario.id_usuarios %>">EDITAR PERFIL</a>
								</button>
							
						</form>
						
					</div>
					<h3></h3>
					<div>
						<ul class="">
							<h2><%= usuario.nombre %></h2>
							<h2><%= usuario.email %></h2>
							<li>200 seguidores</li>
							<li>300 comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		
				<!-- Show mis productos -->
				<div class="container products-wrapper">
					<div class="row">
						<div class="col-12">
							<h2 class="products-title">Mis productos</h2>
						</div>
						<!-- Show the "ultimos" products -->
						<% for(let i = 0; i < usuario.product.length; i++) { %>

							<div class="col-12 col-sm-6 col-lg-3">
		
								<section class="product-box">
									<a href="/products/<%= usuario.product[i].id_producto %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= usuario.product[i].nombre_archivo_imagen %>" alt="cafetera moulinex">
										</figure>
		
										<article class="product-box_data">
		
											<h2>  <%= usuario.product[i].nombre_producto %> </h2>
											<p>	<%= usuario.product[i].descripcion_producto %></p>
											<p> Cargado por : <%= usuario.nombre %> </p>
											<% console.log(usuario, "user"); %>
				
										</article>
		
									</a>
								</section>
							</div>
		
				<% } %>
		<!-- /Mis productos -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>	
</html>