<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<!-- /Header -->

		<!-- product -->
		<div class="container products-wrapper">
			<div class="d-flex align-items-center">
				<h2 class="products-title"> <%= resultado[0].producto %> </h2> 
				<p class="product-detail-description">
					<a href="product-add.html">Editar</a>
				</p>
			</div>
			<div class="product-detail">
				
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= resultado[0].imagen %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= resultado[0].descripcion %>
						</p>
					</article>
					<div class="col-12 col-lg-4">

						<section class="comments">
	
							<div class="col-12 col-lg-4">
								<section class="comments">

									<article>

										<img src="https://via.placeholder.com/35" alt="">

										<div class="data">

											<p class="user">
												<strong> <a href="/profile"> <%=resultado[0].comentarios[0].nombre_usuario %></a> </strong>
												<%=resultado[0].comentarios[0].texto %>
											</p>
											
										</div>

									</article>
	
								</section>
							</div>

						</section>

					</div>
					
				</div>
			</div>
			
	
		</div>
		<!-- /MÃ¡s comentados -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>
</html>
