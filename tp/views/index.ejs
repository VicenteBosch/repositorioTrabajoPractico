<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>
	<!-- Include Head -->

	<body>
		<!-- Header -->

		<% if (locals.user) { %>

			<%- include('./partials/headerLogueado') %>


				<% } else { %>

					<%- include('./partials/header') %>

						<% } %>

							<!-- /Header -->

							<!-- Banner -->
							<div class="banner">
								<img src="/images/users/imagenBanner.jpg" alt="Banner de ofertas">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Novedades</h2>
									</div>

									<!-- Show the "ultimos" products -->


									<% for(let i=0; i < productos.length; i++) { %>

										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/products/<%= productos[i].id_producto %>">
													<figure class="product-box_image">
														<img src="/images/products/<%= productos[i].nombre_archivo_imagen %>"
															alt="cafetera ">
													</figure>

													<article class="product-box_data">

														<h2>
															<%= productos[i].nombre_producto %>
														</h2>
														<p>
															<%= productos[i].descripcion_producto %>
														</p>
														<a href="/profile/<%= productos[i].user.id_usuarios %>">
															<p> Cargado por : <%= productos[i].user.nombre %>
															</p>
														</a>

													</article>

												</a>
											</section>
										</div>

										<% } %>

											<div class="col-12">
												<h2 class="products-title">Más Novedades</h2>
											</div>


											<% for(let i=0; i < productos.length; i++) { %>

												<div class="col-12 col-sm-6 col-lg-3">
													<section class="product-box">
														<a href="/products/<%= productos[i].id_producto %>">
															<figure class="product-box_image">
																<img src="/images/products/<%= productos[i].nombre_archivo_imagen %>"
																	alt="cafetera moulinex">
															</figure>

															<article class="product-box_data">

																<h2>
																	<%= productos[i].nombre_producto %>
																</h2>
																<p>
																	<%= productos[i].descripcion_producto %>
																</p>
																<a href="/profile/<%= productos[i].user.id_usuarios %>">
																	<p> Cargado por : <%= productos[i].user.nombre %>
																	</p>
																</a>

															</article>

														</a>
													</section>
												</div>

												<% } %>
								</div>
							</div>
							<!-- /Novedades -->

							<!-- Más comentados -->

							<!-- /Más comentados -->

							<!-- footer -->
							<%- include('./partials/footer') %>
								<!-- /footer -->
	</body>

</html>