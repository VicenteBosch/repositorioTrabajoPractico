<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<!-- /Header -->

		<!-- product -->
		<div class="container products-wrapper">
			<div class="d-flex align-items-center">
				<h2 class="products-title"> <%= autos.productos[0].producto %> </h2> 
				<p class="product-detail-description">
					<a href="/products/add">Editar</a>
				</p>
			</div>
			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= autos.productos[0].imagen %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= autos.productos[0].descripcion %>
						</p>
					</article>
					
						<div class="col-12 col-lg-4">
							<section class="comments">
								<article>
									<img src="https://via.placeholder.com/35" alt="">
									<div class="data">
										<p class="user">
											<strong> <a href="/profile"> <%=autos.productos[0].comentarios[0].nombre_usuario %></a> </strong>
											<%=autos.productos[0].comentarios[0].texto %>
										</p>
									</div>
								</article>
	
							</section>
						</div>

						

						<form class="form" action="" method="POST">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
				</div>
			</div>
		</div>
		<!-- /product det -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->

	</body>	
</html>
